{% extends 'account/layout.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block title %}Cyber Konsultant - ustawienia{% endblock %}

{% block main %}
    <!-- DASHBOARD MAIN -->
    <div class="dashboard-main">
        {% include 'account/layout/impersonation.html.twig' %}

        <ul class="tabs-menu">
            <li class="tabs-menu-item js-tabs-menu-item"
                onclick="window.location.href='{{ path('account_settings_account_details') }}'">
                <div class="tabs-menu-item__icon">
                    <img loading="lazy" src="{{ asset('build/images/user-edit.svg') }}" alt="User edit"/>
                </div>
                <div class="tabs-menu-item__title">Dane konta</div>
            </li>
            <li class="tabs-menu-item js-tabs-menu-item is-active"
                onclick="window.location.href='{{ path('account_settings_billing_details') }}'">
                <div class="tabs-menu-item__icon">
                    <img loading="lazy" src="{{ asset('build/images/users.svg') }}" alt="Users"/>
                </div>
                <div class="tabs-menu-item__title">Dane rozliczeniowe</div>
            </li>
        </ul>
        <div class="dashboard-main__content">
            <div class="tabs-panel js-tabs-panel is-active">
                {% form_theme formView 'form/form_layout.html.twig' %}
                {{ form_start(formView) }}
                <div class="tile">
                    <div class="row">
                        <div class="form-control mb-10 md:mb-16 w-full xl:w-1/2 col">
                            <label for="">Imię</label>
                            {{ form_widget(formView.firstName) }}
                            {{ form_errors(formView.firstName) }}
                        </div>
                        <div class="form-control mb-10 md:mb-16 w-full xl:w-1/2 col">
                            <label for="">Nazwisko</label>
                            {{ form_widget(formView.lastName) }}
                            {{ form_errors(formView.lastName) }}
                        </div>
                        <div class="form-control mb-10 md:mb-16 w-full xl:w-1/2 col">
                            <label for="">Nazwa firmy</label>
                            {{ form_widget(formView.companyName) }}
                            {{ form_errors(formView.companyName) }}
                        </div>
                        <div class="form-control mb-10 md:mb-16 w-full xl:w-1/2 col">
                            <label for="">Nip</label>
                            {{ form_widget(formView.taxId) }}
                            {{ form_errors(formView.taxId) }}
                        </div>
                        <div class="form-control mb-10 md:mb-16 w-full md:w-2/3 xl:w-1/2 col">
                            <label for="">Ulica</label>
                            {{ form_widget(formView.street) }}
                            {{ form_errors(formView.street) }}
                        </div>
                        <div class="form-control mb-10 md:mb-16 w-full md:w-1/3 xl:w-1/2 col">
                            <label for="">Numer</label>
                            {{ form_widget(formView.propertyNumber) }}
                            {{ form_errors(formView.propertyNumber) }}
                        </div>
                        <div class="form-control mb-10 md:mb-16 w-full md:w-2/3 xl:w-1/2 col">
                            <label for="">Miasto</label>
                            {{ form_widget(formView.city) }}
                            {{ form_errors(formView.city) }}
                        </div>
                        <div class="form-control mb-10 md:mb-16 w-full md:w-1/3 xl:w-1/2 col">
                            <label for="">Kod pocztowy</label>
                            {{ form_widget(formView.zipCode) }}
                            {{ form_errors(formView.zipCode) }}
                        </div>
                        <div class="form-control md:mb-16 w-full xl:w-1/2 col">
                            <label for="">Kraj</label>
                            {{ form_widget(formView.country) }}
                            {{ form_errors(formView.country) }}
                        </div>
                    </div>
                </div>

                <div class="tile mt-10 md:mt-16 xl:mt-13">
                    <h6 class="tile__title">Dane karty płatniczej</h6>
                    <div class="row">
                        <div class="form-control mb-10 md:mb-16 w-full xl:w-1/2 col">
                            <label for="">Imię</label>
                            <input type="text" value="Theodore">
                        </div>
                        <div class="form-control mb-10 md:mb-16 w-full xl:w-1/2 col">
                            <label for="">Nazwisko</label>
                            <input type="text" value="Theodore">
                        </div>
                        <div class="form-control mb-10 md:mb-13 xl:mb-0 w-full xl:w-1/2 col order-1 xl:order-none">
                            <label for="">Nazwa firmy</label>
                            <input type="text" value="Theodore">
                        </div>
                        <div class="form-control mb-10 md:mb-13 w-3/5 xl:mb-0 md:w-2/3 w-full xl:w-1/4 col">
                            <label for="">MM/YY</label>
                            <input type="text" value="Theodore">
                        </div>
                        <div class="form-control xl:mb-0 w-2/5 w-full md:w-1/3 xl:w-1/4 col">
                            <label for="">CCV</label>
                            <input type="text" value="Theodore">
                        </div>
                    </div>
                </div>

                <div class="flex md:justify-end mt-10 md:mt-16">
                    <button type="submit" class="btn btn--secondary btn--form-submit w-full md:w-auto">
                        <div class="btn__icon">
                            <img loading="lazy" src="{{ asset('build/images/floppy-disk.svg') }}" alt="Floppy disk"/>
                        </div>
                        <div class="btn__title">
                            Zatwierdź
                        </div>
                    </button>
                </div>
                {{ form_end(formView) }}
            </div>
        </div>
    </div>
    <!-- DASHBOARD MAIN! -->
{% endblock %}