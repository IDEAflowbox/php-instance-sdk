{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block title %}Cyber Konsultant{% endblock %}

{% block body %}
    <div class="dashboard-container">
        {% block modal %}
        {% endblock %}

        <div class="dashboard-wrapper">
            {% block header %}
            <!-- DASHBOARD HEADER -->
            <div class="dashboard-header">
                <a href="{{ path('admin_client_list') }}" class="dashboard-header__logo flex">
                    <img loading="lazy" src="{{ asset('build/images/idea-commerce-logo-2.svg') }}" alt="Idea commerce logo" />
                </a>
                <div class="dropdown">
                    <div class="lang-change">
                        <img loading="lazy" src="{{ asset('build/images/world.svg') }}" alt="World" />
                        <span class="lang-change__title">
							<div class="hidden md:block">Polski</div>
							<div class="md:hidden">PL</div>
						</span>
                    </div>
                    <div class="dropdown__icon hidden md:flex">
                        <img loading="lazy" src="{{ asset('build/images/angle-down.svg') }}" alt="Angle down" />
                    </div>
                </div>
                <div class="dropdown ml-8 md:ml-16">
                    <div class="user-avatar">
                        <img loading="lazy" src="{{ asset('build/images/avatar.jpg') }}" alt="User avatar" />
                    </div>
                    <div class="user-email">jan.kowalski@email.com</div>
                    <div class="dropdown__icon">
                        <img loading="lazy" src="{{ asset('build/images/angle-down.svg') }}" alt="Angle down" />
                    </div>
                </div>
            </div>
            <!-- DASHBOARD HEADER! -->
            {% endblock %}

            {% block main %}{% endblock %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}