{% form_theme billingItemsFormView 'form/form_layout.html.twig' %}
{{ form_start(billingItemsFormView, {'method': 'post'}) }}
<div class="tile mt-13 xl:mt-16">
    <div class="md:flex flex-wrap md:justify-between">
        <h6 class="heading heading--xl mt-3 mb-0">Pozycje na fakturze</h6>
        <div class="flex mt-6 md:mt-0">
            <a href="{{ path('admin_client_show', {'client': client.id}) }}" class="btn btn--sm btn--tertiary md:ml-16">
                <div class="btn__title">
                    Anuluj
                </div>
            </a>
            <button type="submit" class="btn btn--sm btn--secondary ml-10">
                <div class="btn__title">
                    Zapisz
                </div>
            </button>
        </div>
    </div>
    <table class="table mt-13 table--invoices-2 editable-inputs is-editable" data-content="billing-items" data-index="{{ billingItemsFormView.billingItems|length > 0 ? billingItemsFormView.billingItems|last.vars.name + 1 : 0 }}" data-prototype="{{ include('admin/client/billing_item.html.twig')|e }}">
        <thead>
        <tr>
            <th>
                <div>Nazwa</div>
                <div class="md:hidden">Ilość</div>
            </th>
            <th class="hidden md:table-cell">Ilość</th>
            <th>
                <div>Cena jedn.netto</div>
                <div class="md:hidden">Vat</div>
            </th>
            <th class="hidden md:table-cell">Vat</th>
        </tr>
        </thead>
        <tbody>
        {% for billingItem in billingItemsFormView.billingItems %}
            <tr>
                <td>
                    <div class="form-control">
                        {{ form_widget(billingItem.name, {'attr': {'data-content': 'name'}}) }}
                        {{ form_errors(billingItem.name) }}
                    </div>
                    <div class="md:hidden mt-3">
                        <div class="form-control">

                        </div>
                    </div>
                </td>
                <td>
                    <div class="md:hidden">
                        <div class="form-control">

                        </div>
                    </div>
                    <div class="form-control mt-3 md:mt-0">
                        {{ form_widget(billingItem.quantity, {'attr': {'data-content': 'quantity'}}) }}
                        {{ form_errors(billingItem.quantity) }}
                    </div>
                    <div class="block mt-6 md:hidden">
                        <a href="" download class="flex table-link">
                            <div class="table-icon">
                                <img loading="lazy" src="{{ asset('build/images/bin.svg') }}" alt="Bin" class="pseudo-table-icon mr-4" />
                            </div>
                            Usuń
                        </a>
                    </div>
                </td>
                <td class="hidden md:table-cell text-nowrap">
                    <div class="form-control">
                        {{ form_widget(billingItem.unitPrice, {'attr': {'data-content': 'unit-price'}}) }}
                        {{ form_errors(billingItem.unitPrice) }}
                    </div>
                </td>
                <td class="hidden md:table-cell">
                    <div class="form-control">
                        {{ form_widget(billingItem.vatRate, {'attr': {'data-content': 'vat-rate'}}) }}
                        {{ form_errors(billingItem.vatRate) }}
                    </div>
                </td>
                <td class="hidden md:table-cell text-nowrap">
                    <a href="" download class="flex table-link" data-action="remove">
                        <div class="table-icon">
                            <img loading="lazy" src="{{ asset('build/images/bin.svg') }}" alt="Bin" class="pseudo-table-icon mr-4" />
                        </div>
                        Usuń
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



    <button name="add-billing-item" class="btn btn--sm btn--tertiary">
        <div class="btn__icon">
            <img loading="lazy" src="{{ asset('build/images/plus.svg') }}" alt="Plus" />
        </div>
        <div class="btn__title">
            Dodaj pozycję
        </div>
    </button>

    <div class="w-full md:w-1/2 xl:w-1/3 md:ml-auto">
        <div class="list-wrapper mt-13">
            <div class="w-full -mx-8">
                <div class="px-8">
                    <div class="flex border-b list-item">
                        <div class="list-item__title">Razem netto:</div>
                        <div class="list-item__value text-right" data-content="net-value"></div>
                    </div>
                </div>
                <div class="px-8">
                    <div class="flex border-b list-item">
                        <div class="list-item__title">VAT:</div>
                        <div class="list-item__value text-right" data-content="vat-value"></div>
                    </div>
                </div>
                <div class="px-8">
                    <div class="flex border-b list-item">
                        <div class="list-item__title">Razem brutto</div>
                        <div class="list-item__value list-item__value--lg text-right" data-content="gross-value"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{ form_end(billingItemsFormView) }}