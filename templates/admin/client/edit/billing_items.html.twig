{% form_theme billingItemsFormView 'form/form_layout.html.twig' %}

<div class="tile mt-13 xl:mt-16">
    {{ form_start(billingItemsFormView, {'method': 'post'}) }}
    <div class="md:flex flex-wrap md:justify-between">
        <h6 class="heading heading--xl mt-3 mb-0">Pozycje na fakturze</h6>
        <div class="flex mt-10 md:mt-0">
            <a href="{{ path('admin_client_show', {'client': client.id}) }}" class="btn btn--sm btn--tertiary md:ml-16">
                <div class="btn__title">
                    Anuluj
                </div>
            </a>
            <button type="submit" class="btn btn--sm btn--secondary ml-6 md:ml-10">
                <div class="btn__title">
                    Zapisz
                </div>
            </button>
        </div>
    </div>

    <div data-content="billing-items" data-index="{{ billingItemsFormView.billingItems|length > 0 ? billingItemsFormView.billingItems|last.vars.name + 1 : 0 }}" data-prototype="{{ include('admin/client/edit/billing_item.html.twig')|e }}">
        <!-- Heading row -->
        <div class="md:flex flex-wrap mt-4 md:mt-13 md:-mx-3 xl:-mx-8 hidden">
            <div class="w-12 xl:w-20 xl:px-8 md:px-3"></div>
            <div class="flex-1 xl:px-8 md:px-3">
                <span class="uppercase text-gray-600 text-xs">Nazwa</span>
            </div>
            <div class="w-36 xl:w-60 xl:px-8 md:px-3">
                <span class="uppercase text-gray-600 text-xs">Ilość</span>
            </div>
            <div class="md:w-48 xl:w-100 xl:px-8 md:px-3">
                <span class="uppercase text-gray-600 text-xs">Cena jedn. netto</span>
            </div>
            <div class="md:w-48 xl:w-60 xl:px-8 md:px-3">
                <span class="uppercase text-gray-600 text-xs">Vat(%)</span>
            </div>
            <div class="md:w-32 xl:w-60 xl:px-8 md:px-3"></div>
        </div>

        {% for billingItem in billingItemsFormView.billingItems %}
        <div data-content="billing-item" class="flex flex-wrap border-b-1 border-gray-200 md:items-center pt-8 pb-12 -mx-3 xl:-mx-8">
            <div class="w-1/12 md:w-12 xl:w-20 my-auto xl:px-8 px-3">
                <div class="text-gray-900 mt-18 md:mt-0 font-bold">{{ loop.index }}</div>
            </div>
            <div class="w-11/12 md:w-auto md:flex-1 xl:px-8 px-3">
                <div class="uppercase text-gray-600 text-xs md:hidden mb-6 mt-6 font-extrabold">Nazwa</div>
                <div class="form-control">
                    {{ form_widget(billingItem.name, {'attr': {'data-content': 'name'}}) }}
                    {{ form_errors(billingItem.name) }}
                </div>
            </div>
            <div class="w-1/3 md:w-36 xl:w-60 xl:px-8 px-3">
                <div class="uppercase text-gray-600 text-xs md:hidden mb-6 mt-6 font-extrabold flex items-center h-12">ilość</div>
                <div class="form-control">
                    {{ form_widget(billingItem.quantity, {'attr': {'data-content': 'quantity'}}) }}
                    {{ form_errors(billingItem.quantity) }}
                </div>
            </div>
            <div class="w-1/3 md:w-48 xl:w-100 xl:px-8 px-3">
                <div class="uppercase text-gray-600 text-xs md:hidden mb-6 mt-6 font-extrabold flex items-center h-12">cena<br>jednostkowa</div>
                <div class="form-control">
                    {{ form_widget(billingItem.unitPrice, {'attr': {'data-content': 'unit-price'}}) }}
                    {{ form_errors(billingItem.unitPrice) }}
                </div>
            </div>
            <div class="w-1/3 md:w-48 xl:w-60 xl:px-8 px-3">
                <div class="uppercase text-gray-600 text-xs md:hidden mb-6 mt-6 font-extrabold flex items-center h-12">Vat</div>
                <div class="form-control">
                    <div class="relative">
                        {{ form_widget(billingItem.vatRate, {'attr': {'data-content': 'vat-rate'}}) }}
                        {{ form_errors(billingItem.vatRate) }}
                    </div>
                </div>
            </div>
            <div class="w-full md:w-32 xl:w-60 xl:px-8 px-3 mt-10 flex justify-end md:mt-0 md:block">
                <a href="" class="flex items-center" onclick="this.parentNode.parentNode.remove(); return false;">
                    <div class="w-6 h-6 mr-4">
                        <img loading="lazy" src="{{ asset('build/images/trash.svg') }}" alt="Bin" class="w-full h-full object-contain" />
                    </div>
                    <div class="text-base text-gray-900 transform translate-y-1">Usuń</div>
                </a>
            </div>
        </div>
        {% endfor %}
    </div>


    <button name="add-billing-item" class="btn btn--sm btn--tertiary mt-10">
        <div class="btn__icon">
            <img loading="lazy" src="{{ asset('build/images/plus.svg') }}" alt="Plus" />
        </div>
        <div class="btn__title">
            Dodaj pozycję
        </div>
    </button>

    <div class="flex flex-wrap -mx-8 mt-16">
        <div class="px-8 xl:w-3/5 w-full">
            <div class="list-header mb-3 xl:mb-6">
                Wystawca faktury
            </div>
            <div class="form-control mt-8">
                <div class="relative">
                    {{ form_widget(billingItemsFormView.billingOption.issuerAddress) }}
                    {{ form_errors(billingItemsFormView.billingOption.issuerAddress) }}
                    <div class="select-icon"></div>
                </div>
            </div>
        </div>
        <div class="px-8 xl:w-2/5 w-full mt-16 xl:mt-0">
            <div class="list-header mb-3 xl:mb-6">
                Podsumowanie
            </div>
            <div class="list-wrapper mt-10 md:mt-13">
                <div class="w-full">
                    <div class="flex border-b list-item">
                        <div class="list-item__title">Razem netto:</div>
                        <div class="list-item__value font-semibold text-right xl:text-left" data-content="net-value"></div>
                    </div>
                    <div class="flex border-b list-item">
                        <div class="list-item__title">VAT:</div>
                        <div class="list-item__value font-semibold text-right xl:text-left" data-content="vat-value"></div>
                    </div>
                    <div class="flex border-b list-item list-item--lg mt-10 md:mt-0">
                        <div class="list-item__title">Razem brutto</div>
                        <div class="list-item__value list-item__value--lg text-right xl:text-left" data-content="gross-value"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(billingItemsFormView) }}
</div>