<div class="tile mt-10 md:mt-13">
    {{ form_start(externalApiConfigFormView, {'method': 'post'}) }}
    <div class="flex flex-wrap md:justify-between">
        <h6 class="heading heading--xl mt-3 mb-0 w-full md:w-auto">Dane API</h6>
        <div class="flex mt-10 md:mt-0">
            <a href="{{ path('admin_client_show', {'client': client.id}) }}" class="btn btn--sm btn--tertiary md:ml-16">
                <div class="btn__title">
                    Anuluj
                </div>
            </a>
            <button type="submit" class="btn btn--sm btn--secondary ml-6 md:ml-10">
                <div class="btn__title">
                    Zapisz
                </div>
            </button>
        </div>
    </div>
    <div class="list-wrapper mt-10">
        <div class="xl:w-1/2">
            <div class="flex border-b list-item">
                <div class="list-item__title">Adres do API</div>
                <div class="list-item__value">
                    <div class="form-control">
                        {{ form_widget(externalApiConfigFormView.url) }}
                        {{ form_errors(externalApiConfigFormView.url) }}
                    </div>
                </div>
            </div>
            <div class="flex list-item border-b">
                <div class="list-item__title">Token</div>
                <div class="list-item__value">
                    <div class="form-control">
                        {{ form_widget(externalApiConfigFormView.token) }}
                        {{ form_errors(externalApiConfigFormView.token) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(externalApiConfigFormView) }}
</div>