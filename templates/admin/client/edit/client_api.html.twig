<div class="tile mt-10 md:mt-13">
    <div class="flex flex-wrap md:justify-between">
        <h6 class="heading heading--xl mt-3 mb-0 w-full md:w-auto">Dane API</h6>
        <a href="" class="btn btn--sm btn--secondary md:ml-auto mt-10 md:mt-0">
            <div class="btn__title">
                Zapisz
            </div>
        </a>
    </div>
    <div class="list-wrapper mt-10">
        <div class="xl:w-1/2">
            <div class="flex border-b list-item">
                <div class="list-item__title">Adres do API</div>
                <div class="list-item__value">{% if client.externalApiConfig %}{{ client.externalApiConfig.url }}{% endif %}</div>
            </div>
            <div class="flex border-b list-item">
                <div class="list-item__title">Login</div>
                <div class="list-item__value">{% if client.externalApiConfig %}{{ client.externalApiConfig.login }}{% endif %}</div>
            </div>
            <div class="flex list-item border-b">
                <div class="list-item__title">Has≈Ço do API</div>
                <div class="list-item__value flex flex-wrap ">
                    <div class="flex ml-auto md:ml-0 items-center">
                        <span class="mr-6 font-semibold">{% if client.externalApiConfig %}{{ client.externalApiConfig.password }}{% endif %}</span>
                        <img loading="lazy" src="{{ asset('build/images/b-eye.svg') }}" alt="Menu" class="w-6 h-6 md:mr-10 cursor-pointer" />
                    </div>
                    <div class="w-full md:w-auto mt-4">
                        <button class="btn btn--tertiary ml-auto">
                            <span class="btn__title">Generuj</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>