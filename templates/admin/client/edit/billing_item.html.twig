{% block billing_item_template %}
    <div data-content="billing-item" class="flex flex-wrap border-b-1 border-gray-200 md:items-center pt-8 pb-12 -mx-3 xl:-mx-8">
        <div class="w-1/12 md:w-12 xl:w-20 my-auto xl:px-8 px-3">
            <div class="text-gray-900 mt-18 md:mt-0 font-bold">__number__</div>
        </div>
        <div class="w-11/12 md:w-auto md:flex-1 xl:px-8 px-3">
            <div class="uppercase text-gray-600 text-xs md:hidden mb-6 mt-6 font-extrabold">Nazwa</div>
            <div class="form-control">
                {{ form_widget(billingItemsFormView.billingItems.vars.prototype.name, {'attr': {'data-content': 'name'}}) }}
            </div>
        </div>
        <div class="w-1/3 md:w-36 xl:w-60 xl:px-8 px-3">
            <div class="uppercase text-gray-600 text-xs md:hidden mb-6 mt-6 font-extrabold flex items-center h-12">ilość</div>
            <div class="form-control">
                {{ form_widget(billingItemsFormView.billingItems.vars.prototype.quantity, {'attr': {'data-content': 'quantity'}}) }}
            </div>
        </div>
        <div class="w-1/3 md:w-48 xl:w-100 xl:px-8 px-3">
            <div class="uppercase text-gray-600 text-xs md:hidden mb-6 mt-6 font-extrabold flex items-center h-12">cena<br>jednostkowa</div>
            <div class="form-control">
                {{ form_widget(billingItemsFormView.billingItems.vars.prototype.unitPrice, {'attr': {'data-content': 'unit-price'}}) }}
            </div>
        </div>
        <div class="w-1/3 md:w-48 xl:w-60 xl:px-8 px-3">
            <div class="uppercase text-gray-600 text-xs md:hidden mb-6 mt-6 font-extrabold flex items-center h-12">Vat</div>
            <div class="form-control">
                <div class="relative">
                    {{ form_widget(billingItemsFormView.billingItems.vars.prototype.vatRate, {'attr': {'data-content': 'vat-rate'}}) }}
                    <div class="select-icon"></div>
                </div>
            </div>
        </div>
        <div class="w-full md:w-32 xl:w-60 xl:px-8 px-3 mt-10 flex justify-end md:mt-0 md:block">
            <a href="" class="flex items-center" onclick="this.parentNode.parentNode.remove(); return false;">
                <div class="w-6 h-6 mr-4">
                    <img loading="lazy" src="{{ asset('build/images/trash.svg') }}" alt="Bin" class="w-full h-full object-contain" />
                </div>
                <div class="text-base text-gray-900 transform translate-y-1">Usuń</div>
            </a>
        </div>
    </div>
{% endblock %}