<div class="tile mt-10 md:mt-13">
    <div class="flex flex-wrap md:justify-between">
        <h6 class="heading heading--xl mt-3 mb-0 w-full md:w-auto">Dane API</h6>
        <a href="{{ path('admin_client_api_edit', {client: client.id}) }}" class="btn btn--sm btn--tertiary md:ml-auto mt-10 md:mt-0">
            <div class="btn__title">
                Edytuj
            </div>
        </a>
    </div>
    <div class="list-wrapper mt-10">
        <div class="xl:w-1/2">
            <div class="flex border-b list-item">
                <div class="list-item__title">Adres do API</div>
                <div class="list-item__value">{% if client.externalApiConfig %}{{ client.externalApiConfig.url }}{% endif %}</div>
            </div>

            <div class="flex list-item border-b items-center">
                <div class="list-item__title">Token</div>
                <div class="list-item__value flex items-center">
                    <span class="mr-8 js-secret text-blur">{% if client.externalApiConfig %}{{ client.externalApiConfig.token }}{% endif %}</span>
                    <button class="btn btn--quinary ml-auto md:ml-0" onclick="document.querySelector('.js-secret').classList.toggle('text-blur')">
                        <span class="btn__title">Odkryj token</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
