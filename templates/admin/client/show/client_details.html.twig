<div class="tile mt-10 md:mt-13">
    <div class="flex flex-wrap">
        <h6 class="heading heading--xl mt-3 mb-0 w-full md:w-auto md:order-1">{{ client.billingAddress.firstName }} {{ client.billingAddress.lastName }}</h6>
        {% if client.users|length %}
        <a href="{{ path('account_settings_billing_details', {'_switch_user': client.users|first.email}) }}" class="btn btn--sm btn--tertiary md:ml-6 md:order-3 mt-10 md:mt-0 flex-1 md:flex-none">
            <div class="btn__title">
                Przejdź do panelu klienta
            </div>
        </a>
        {% endif %}
        <a href="" class="btn btn--square btn--tertiary md:ml-auto md:order-2 ml-4 mt-10 md:mt-0">
            <img loading="lazy" src="{{ asset('build/images/menu.svg') }}" alt="Menu" class="btn__icon" />
        </a>
    </div>

    <div class="list-wrapper mt-10">
        <div class="xl:w-1/2">
            <div class="flex border-b list-item">
                <div class="list-item__title">Imię i nazwisko</div>
                <div class="list-item__value">{{ client.billingAddress.firstName }} {{ client.billingAddress.lastName }}</div>
            </div>
            <div class="flex border-b list-item">
                <div class="list-item__title">Nazwa firmy</div>
                <div class="list-item__value">{{ client.billingAddress.companyName }}</div>
            </div>
            <div class="flex border-b list-item">
                <div class="list-item__title">NIP</div>
                <div class="list-item__value">{{ client.billingAddress.taxId }}</div>
            </div>
            <div class="flex border-b list-item">
                <div class="list-item__title">Adres</div>
                <div class="list-item__value">{% if client.billingAddress %}{{ client.billingAddress.street }} {{ client.billingAddress.propertyNumber }}, {{ client.billingAddress.zipCode }} {{ client.billingAddress.city }}, {{ client.billingAddress.country }}{% endif %}</div>
            </div>

            <div class="flex border-b list-item">
                <div class="list-item__title">Saldo klienta</div>
                <div class="list-item__value list-item__value--green">Opłacone</div>
            </div>
        </div>
    </div>
</div>