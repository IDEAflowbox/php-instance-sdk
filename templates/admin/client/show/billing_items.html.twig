<div class="tile mt-13 xl:mt-16">
    <div class="flex flex-wrap ">
        <h6 class="heading heading--xl mt-3 mb-0 w-full md:w-auto">Pozycje na fakturze</h6>
        <a href="{{ path('admin_client_billing_items_edit', {'client': client.id}) }}" class="btn btn--sm btn--tertiary md:ml-auto mt-10 md:mt-0">
            <div class="btn__title">
                Edytuj
            </div>
        </a>
    </div>
    <table class="table mt-4 md:mt-13 table--invoices-2 editable-inputs">
        <thead class="hidden md:table-head">
        <tr>
            <th class="hidden md:table-cell"></th>
            <th>
                <div>Nazwa</div>
                <div class="md:hidden">Ilość</div>
            </th>
            <th class="hidden md:table-cell">Ilość</th>
            <th>
                <div>Cena jedn.netto</div>
                <div class="md:hidden">Vat</div>
            </th>
            <th class="hidden md:table-cell">Vat</th>
        </tr>
        </thead>
        <tbody>
        {% for billingItem in client.billingItems %}
        <tr>
            <td class="border-b hidden md:table-cell">{{ loop.index }}</td>
            <td class="border-b">
                <div class="md:hidden uppercase text-gray text-xs font-semibold mb-2">Nazwa</div>
                <span class="text-base">{{ billingItem.name }}</span>
                <div class="md:hidden">
                    <div class="uppercase text-gray text-xs font-semibold mt-8 mb-2">Cena jednostkowa</div>
                    <span class="text-base">{{ billingItem.unitPrice|price_format }}</span>
                </div>
            </td>
            <td class="border-b">
                <div class="md:hidden uppercase text-gray text-xs font-semibold mb-2">Ilość</div>
                {{ billingItem.quantity }}
                <div class="md:hidden">
                    <div class="uppercase text-gray text-xs font-semibold mt-8 mb-2">Vat</div>
                    <span class="text-base">{{ billingItem.vatRate }}%</span>
                </div>
            </td>
            <td class="hidden md:table-cell text-nowrap border-b">
                {{ billingItem.unitPrice|price_format }}
            </td>
            <td class="hidden md:table-cell border-b">
                {{ billingItem.vatRate }}%
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>


    <div class="flex flex-wrap -mx-8 mt-16">
        <div class="px-8 xl:w-3/5 w-full">
            <div class="list-header mb-3 xl:mb-6">
                Wystawca faktury
            </div>
            <div class="md:px-8 mt-8 font-semibold">{% if client.billingOption.issuerAddress %}{{ client.billingOption.issuerAddress.street }} {{ client.billingOption.issuerAddress.propertyNumber }}, {{ client.billingOption.issuerAddress.zipCode }} {{ client.billingOption.issuerAddress.city }}, {{ client.billingOption.issuerAddress.country }}{% endif %}</div>
        </div>

        <div class="px-8 xl:w-2/5 w-full mt-16 xl:mt-0">
            <div class="list-header mb-3 xl:mb-6">
                Podsumowanie
            </div>
            <div class="list-wrapper mt-10 md:mt-13">
                <div class="w-full">
                    <div class="flex border-b list-item">
                        <div class="list-item__title">Razem netto:</div>
                        <div class="list-item__value font-semibold text-right xl:text-left">{{ billing_items_net_value(client) }}</div>
                    </div>
                    <div class="flex border-b list-item">
                        <div class="list-item__title">VAT:</div>
                        <div class="list-item__value font-semibold text-right xl:text-left">{{ billing_items_vat_value(client) }}</div>
                    </div>
                    <div class="flex border-b list-item list-item--lg mt-10 md:mt-0">
                        <div class="list-item__title">Razem brutto</div>
                        <div class="list-item__value list-item__value--lg text-right xl:text-left">{{ billing_items_gross_value(client) }} zł</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>